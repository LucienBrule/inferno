[flake8]
# Style gates
max-line-length = 120
max-complexity = 12

# We want our custom plugin codes and core Flake8 codes
extend-select = INF
# Black-compatible (slice spacing) and other occasional noise
extend-ignore = E203

# Don't lint generated, vendored, or data dirs
exclude = .git,__pycache__,.venv,.eggs,build,dist,doctrine,inferno-viz,scrape,exclude

# Per-file relaxations (tests can be messier and use fixture-relative paths)
per-file-ignores =
    packages/*/tests/*: E501,E402,E203,INF001,E741

# Only lint our actual source dir
paths = packages/

[flake8:local-plugins]
# Map our plugin prefix to the checker class
extension =
    INF = inferno_lint.plugin:Plugin
paths = packages/inferno-lint/src